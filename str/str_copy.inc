;--------------------------------------------------------
STR_COPY:
;--------------------------------------------------------
;Копирование строки
;IN: Y-SRC адрес, X-DST адрес
;--------------------------------------------------------
	PUSH_Y
	PUSH_X
	PUSH TEMP

STR_COPY__LOOP:
	LD TEMP,Y+
	CPI TEMP,0x00
	BREQ STR_COPY__END
	ST X+,TEMP
	RJMP STR_COPY__LOOP

STR_COPY__END:
	POP TEMP
	POP_X
	POP_Y
	RET
.endif
