;--------------------------------------------------------
STRN_COPY:
;--------------------------------------------------------
;Копирование строки
;IN: Y-SRC адрес, X-DST адрес, LOOP_CNTR-длина
;--------------------------------------------------------
	PUSH_Y
	PUSH_X
	PUSH TEMP
	PUSH LOOP_CNTR

STRN_COPY__LOOP:
	LD TEMP,Y+
	ST X+,TEMP
	DEC LOOP_CNTR
	BRNE STRN_COPY__LOOP

STRN_COPY__END:
	POP LOOP_CNTR
	POP TEMP
	POP_X
	POP_Y
	RET
.endif
