;--------------------------------------------------------
CORE5277_RAM_FILL8:
;--------------------------------------------------------
;Заполнение блока памяти значением
;IN: X-адрес, TEMP-значение, LOOP_CNTR-длина
;-START--------------------------------------------------
	PUSH XH
	PUSH XL
	PUSH LOOP_CNTR
_CORE5277_RAM_FILL8__LOOP:
	ST X+,TEMP
	DEC LOOP_CNTR
	BRNE _CORE5277_RAM_FILL8__LOOP
	POP LOOP_CNTR
	POP XL
	POP XH
	RET
.endif
