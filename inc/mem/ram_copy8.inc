.ifdef DEF_CORE5277_RAM_COPY8
.else
.set DEF_CORE5277_RAM_COPY8 = 1

;--------------------------------------------------------
CORE5277_RAM_COPY8:
;--------------------------------------------------------
;Копирование блока памяти
;IN: X-SRC адрес, Z-DST адрес, LOOP_CNTR-длина
;-START--------------------------------------------------
	PUSH XH
	PUSH XL
	PUSH ZH
	PUSH ZL
	PUSH LOOP_CNTR
	PUSH TEMP
_CORE5277_RAM_COPY8__LOOP:
	LD TEMP,X+
	ST Z+,TEMP
	DEC LOOP_CNTR
	BRNE _CORE5277_RAM_COPY8__LOOP
	POP TEMP
	POP LOOP_CNTR
	POP ZL
	POP ZH
	POP XL
	POP XH
	RET
.endif
