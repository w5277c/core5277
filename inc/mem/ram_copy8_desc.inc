;--------------------------------------------------------
CORE5277_RAM_COPY8_DESC:
;--------------------------------------------------------
;Копирование блока памяти(с декрементом смещений)
;IN: X-SRC адрес, Z-DST адрес, LOOP_CNTR-длина
;-START--------------------------------------------------
	PUSH XH
	PUSH XL
	PUSH ZH
	PUSH ZL
	PUSH LOOP_CNTR
	PUSH TEMP
_CORE5277_RAM_COPY8_DESC__LOOP:
	LD TEMP,X
	ST Z,TEMP
	SUBI XL,0x01
	SBCI XH,0x00
	SUBI ZL,0x01
	SBCI ZH,0x00
	DEC LOOP_CNTR
	BRNE _CORE5277_RAM_COPY8_DESC__LOOP
	POP TEMP
	POP LOOP_CNTR
	POP ZL
	POP ZH
	POP XL
	POP XH
	RET
.endif
