;--------------------------------------------------------
CORE5277_ROM_READ_BYTES:
;--------------------------------------------------------
;Копирование блока памяти
;IN: Z-SRC ROM адрес, Y-DST RAM адрес,
;LOOP_CNTR-длина(1-255,0=256)
;-START--------------------------------------------------
	PUSH_Y
	PUSH_Z
	PUSH LOOP_CNTR
	PUSH TEMP
_CORE5277_ROM_READ_BYTES__LOOP:
	LPM TEMP,Z+
	ST Y+,TEMP
	DEC LOOP_CNTR
	BRNE _CORE5277_ROM_READ_BYTES__LOOP
	POP TEMP
	POP LOOP_CNTR
	POP_Z
	POP_Y
	RET
.endif
