.ifdef DEF_CORE5277_DIV10
.else
.set DEF_CORE5277_DIV10 = 1

;--------------------------------------------------------
CORE5277_DIV10:
;--------------------------------------------------------
;Деление 8b числа на 10
;IN: TEMP - 8b число
;OUT: TEMP результат
;--------------------------------------------------------
	PUSH RESULT_H
	PUSH RESULT_L
	PUSH ACCUM

	LDI ACCUM,51
	MUL TEMP,ACCUM
	INC RESULT_H
	LSR RESULT_H
	MOV TEMP,RESULT_H

	POP ACCUM
	POP RESULT_L
	POP RESULT_H
	RET
.endif
