.ifdef DEF_CORE5277_PORT_GET
.else
.set DEF_CORE5277_PORT_GET = 1

.include	"./inc/io/port_offsets.inc"

;--------------------------------------------------------
CORE5277_PORT_GET:
;--------------------------------------------------------
;Считывание состояния порта
;IN: ACCUM сдвоенный порт, исп. только старший ниббл
;OUT: flag С - состояние порта(true = HI)
;--------------------------------------------------------
	PUSH_Z
	PUSH TEMP_H
	PUSH TEMP_L
	PUSH TEMP
	PUSH ACCUM

	MCALL CORE5277_PORT_OFFSETS
	CLR ZH
	MOV ZL,TEMP
	LD TEMP,Z
	CLC
	AND TEMP,ACCUM
	BREQ PC+0x02
	SEC

	POP ACCUM
	POP TEMP
	POP TEMP_L
	POP TEMP_H
	POP_Z
	RET
.endif
