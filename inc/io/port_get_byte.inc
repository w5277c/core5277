.ifdef DEF_CORE5277_PORT_GET_BYTE
.else
.set DEF_CORE5277_PORT_GET_BYTE = 1

.include	"./inc/io/port_offsets.inc"

;--------------------------------------------------------
CORE5277_PORT_GET_BYTE:
;--------------------------------------------------------
;Считывание состояния порта(8 бит)
;IN: ACCUM - порт
;OUT: ACCUM - значение
;--------------------------------------------------------
	PUSH_Z
	PUSH TEMP_H
	PUSH TEMP_L
	PUSH TEMP

	MCALL CORE5277_PORT_OFFSETS
	MOV ZL,TEMP
	LDI ZH,0x00
	LD ACCUM,Z

	POP TEMP
	POP TEMP_L
	POP TEMP_H
	POP_Z
	RET
.endif
