.ifdef DEF_CORE5277_PORT_MODE_OUT
.else
.set DEF_CORE5277_PORT_MODE_OUT = 1

.include	"./inc/io/port_offsets.inc"

;--------------------------------------------------------
CORE5277_PORT_MODE_OUT:
;--------------------------------------------------------
;Устанвливаем порт на выход
;IN: ACCUM - порт
;--------------------------------------------------------
	PUSH_Z
	PUSH TEMP_H
	PUSH TEMP_L
	PUSH TEMP
	PUSH ACCUM

	MCALL CORE5277_PORT_OFFSETS
	CLR ZH
	MOV ZL,TEMP_L
	LD TEMP,Z
	OR TEMP,ACCUM
	ST Z,TEMP

	POP ACCUM
	POP TEMP
	POP TEMP_L
	POP TEMP_H
	POP_Z
	RET
.endif
