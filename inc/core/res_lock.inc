.ifdef DEF_CORE5277_RES_LOCK
.else
.set DEF_CORE5277_RES_LOCK = 1

.include	"./inc/core/res_wait_n_lock.inc"

;--------------------------------------------------------
CORE5277_RES_LOCK:
;--------------------------------------------------------
;Занимаем ресурс
;IN:ACCUM - ID ресурса
;OUT:флаг Z - результат(HI - успех)
;--------------------------------------------------------
	PUSH TEMP_H
	PUSH TEMP_L
	PUSH TEMP
	LDI TEMP_H,0x00
	LDI TEMP_L,0x00
	LDI TEMP,0x03
	MCALL CORE5277_RES_WAIT_N_LOCK
	POP TEMP
	POP TEMP_L
	POP TEMP_H
	RET
.endif
