.ifdef DEF__CORE5277_FLAG_OFFSET
.else
.set DEF__CORE5277_FLAG_OFFSET = 1

;--------------------------------------------------------
_CORE5277_FLAG_OFFSET:
;--------------------------------------------------------
;Возвращаем смещение на необходимые флаги
;IN:TEMP - номер флага(0-63)
;OUT:Z - смещение
;--------------------------------------------------------
	PUSH TEMP
	LSR TEMP
	LSR TEMP
	LSR TEMP
	LDI ZH,high(_CORE5277_FLAGS)
	LDI ZL,low(_CORE5277_FLAGS)
	ADD ZL,TEMP
	CLR TEMP
	ADC ZH,TEMP
	POP TEMP
	RET
.endif
