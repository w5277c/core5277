.ifdef DEF_CORE5277_TIMER_START
.else
.set DEF_CORE5277_TIMER_START = 1

;--------------------------------------------------------
CORE5277_TIMER_START:
;--------------------------------------------------------
;Запуск таймера
;IN: PID,TEMP - номер таймера(0-...),
;ACCUM - кол-во итераций(по 2мс)
;--------------------------------------------------------
	PUSH_Z
	PUSH TEMP

	MOV ZL,TEMP
	LSL TEMP
	LSL TEMP
	ADD TEMP,ZL

	LDI ZH,high(_CORE5277_TIMERS)
	LDI ZL,low(_CORE5277_TIMERS)
	ADD ZL,TEMP
	CLR TEMP
	ADC ZH,TEMP

	STD Z+_CORE5277_TIMER_DEFAULT,ACCUM
	STD Z+_CORE5277_TIMER_CNTR,ACCUM
	STD Z+_CORE5277_TIMER_PROC_ID,PID

	POP TEMP
	POP_Z
	RET
.endif
