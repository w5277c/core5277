.ifdef DEF_CORE5277_TIMER_STOP
.else
.set DEF_CORE5277_TIMER_STOP = 1

;--------------------------------------------------------
CORE5277_TIMER_STOP:
;--------------------------------------------------------
;Останов таймера
;IN TEMP - номер таймера(0-...)
;--------------------------------------------------------
	PUSH_Z
	PUSH TEMP

	MOV ZL,TEMP
	LSL TEMP
	LSL TEMP
	ADD TEMP,ZL

	LDI ZH,high(_CORE5277_TIMERS)
	LDI ZL,low(_CORE5277_TIMERS)
	ADD ZL,TEMP
	CLR TEMP
	ADC ZH,TEMP

	LDI TEMP,0xff
	STD Z+_CORE5277_TIMER_PROC_ID,TEMP

	POP TEMP
	POP_Z
	RET
.endif
