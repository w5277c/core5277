.ifdef DEF_CORE5277_TIMER_SET
.else
.set DEF_CORE5277_TIMER_SET = 1

;--------------------------------------------------------
CORE5277_TIMER_SET:
;--------------------------------------------------------
;Установка таймера
;IN: TEMP - номер таймера(0-...),
;TEMP_H,TEMP_L - адрес обработчика
;--------------------------------------------------------
	PUSH_Z
	PUSH TEMP

	MOV ZL,TEMP
	LSL TEMP
	LSL TEMP
	ADD TEMP,ZL

	LDI ZH,high(_CORE5277_TIMERS)
	LDI ZL,low(_CORE5277_TIMERS)
	ADD ZL,TEMP
	CLR TEMP
	ADC ZH,TEMP

	LDI TEMP,0xff
	STD Z+_CORE5277_TIMER_PROC_ID,TEMP
	STD Z+_CORE5277_TIMER_HANDLER+0x00,TEMP_H
	STD Z+_CORE5277_TIMER_HANDLER+0x01,TEMP_L

	POP TEMP
	POP_Z
	RET
.endif
