.ifdef DEF_C5_LOG_BYTES
.else
.set DEF_C5_LOG_BYTES = 1
.ifdef LOGGING_PORT

.include	"./core/log/log_byte.inc"
;--------------------------------------------------------
C5_LOG_BYTES:
;--------------------------------------------------------
;Логируем блок данных
;IN: Y - адрес начала блока, TEMP - длина блока
;--------------------------------------------------------
	PUSH TEMP
	PUSH LOOP_CNTR
	PUSH_Y

	MOV LOOP_CNTR,TEMP
_C5_LOG_BYTES__LOOP:
	LD TEMP,Y+
	MCALL C5_LOG_BYTE
	DEC LOOP_CNTR
	BRNE _C5_LOG_BYTES__LOOP

	POP_Y
	POP LOOP_CNTR
	POP TEMP
	RET
