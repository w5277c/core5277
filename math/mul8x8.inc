.ifdef DEF_C5_MUL8X8
.else
.set DEF_C5_MUL8X8 = 1

;--------------------------------------------------------
C5_MUL8X8:
;--------------------------------------------------------
;Умножение 8b числа на 8б число
;IN: TEMP_L - 8b число, TEMP - 8b число
;OUT: TEMP_H, TEMP_L - 16b результат
;--------------------------------------------------------
	PUSH _RESULT_H
	PUSH _RESULT_L

	MUL TEMP_L,TEMP
	MOV TEMP_L,_RESULT_L
	MOV TEMP_H,_RESULT_H

	POP _RESULT_L
	POP _RESULT_H
	RET
.endif
