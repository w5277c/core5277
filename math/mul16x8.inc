.else
.set DEF_MUL16X8 = 1

;--------------------------------------------------------
MUL16X8:
;--------------------------------------------------------
;Умножение 16б числа на 8б число
;IN: TEMP_H,TEMP_L-16б число, TEMP - 8б число
;OUT: TEMP_EL, TEMP_H, TEMP_L - 16б результат
;-START--------------------------------------------------
	PUSH _RESULT_H
	PUSH _RESULT_L

	PUSH TEMP_H
	MUL TEMP_L,TEMP
	MOV TEMP_L,_RESULT_L
	MOV TEMP_H,_RESULT_H
	POP TEMP_EL
	MUL TEMP_EL,TEMP
	ADD TEMP_H,_RESULT_L
	LDI TEMP_EL,0x00
	ADC TEMP_EL,_RESULT_H

	POP _RESULT_L
	POP _RESULT_H
	RET
.endif
