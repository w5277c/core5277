;--------------------------------------------------------
RAM_FILL16:
;--------------------------------------------------------
;Заполнение блока памяти значением
;IN: X-адрес, TEMP-значение, TEMP_H/TEMP_L-длина
;-START--------------------------------------------------
	PUSH XH
	PUSH ZL
	PUSH TEMP_H
	PUSH TEMP_L
_RAM_FILL16__LOOP:
	ST X+,TEMP
	SUBI TEMP_L,0x01
	SBCI TEMP_H,0x00
	CPI TEMP_H,0x00
	BRNE _RAM_FILL16__LOOP
	CPI TEMP_L,0x00
	BRNE _RAM_FILL16__LOOP
	POP TEMP_H
	POP TEMP_L
	POP XL
	POP XH
	RET
.endif
