.ifdef DEF_BITNUM_TO_NUM
.else
.set DEF_BITNUM_TO_NUM = 1

BITNUM_TO_NUM_TABLE:
	.db	0x01,0x02,0x04,0x08,0x10,0x20,0x40,0x80
;--------------------------------------------------------
BITNUM_TO_NUM:
;--------------------------------------------------------
;Конвертирование байта в HEX(два ASCII символа)
;IN: TEMP - номер бита(0-7)
;OUT: TEMP - число(1,2,4,8,16,32,64,128)
;-START--------------------------------------------------
	PUSH_Z
	LDI ZH,high(BITNUM_TO_NUM_TABLE*2)
	LDI ZL,low(BITNUM_TO_NUM_TABLE*2)
	LSL TEMP
	ADD ZL,TEMP
	CLR TEMP
	ADC ZH,TEMP
	LPM TEMP,Z
	POP_Z
	RET
.endif
